<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.technovateria.loveshayari">

    <uses-permission android:name="com.google.android.gms.permission.AD_ID"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES"/>

    <application
        android:name="com.technovateria.loveshayari.Ads.MyApplication"
        android:hardwareAccelerated="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_hindi_shayari"
        android:roundIcon="@drawable/ic_hindi_shayari"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.HindiShayari"
        tools:targetApi="31" >

        <activity
            android:name="com.technovateria.loveshayari.AllShayariActivity"
            android:exported="false" />
        <activity
            android:name="com.technovateria.loveshayari.ContactUsActivity"
            android:exported="false" />
        <activity
            android:name="com.technovateria.loveshayari.MainActivity"
            android:exported="true" />
        <activity
            android:name="com.technovateria.loveshayari.SplashActivity"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1000631987270327~1683335886"/>

    </application>

</manifest>